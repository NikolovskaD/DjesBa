<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/gradient_bg"
    android:gravity="center"
    tools:context=".Fragments.Fragment1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginLeft="20sp"

        android:src="@drawable/coffee2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="20sp"
        android:textColor="@color/colorAccent"
        android:text="Thirsty?" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginBottom="50sp"
        android:padding="10sp"
        android:textAlignment="center"
        android:text="Would you like to have a cup of coffee with your friends, spend that quality time you've been thinking about for a while?" />




</LinearLayout>